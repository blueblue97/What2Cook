  <script>
    function mockAIBudgetAdvice() {
      const input = document.getElementById('aiGoal').value.trim();
      const result = document.getElementById('aiAdviceResult');
      if (!input) {
        result.textContent = 'Please describe your financial goal.';
        return;
      }
      result.textContent = `AI Suggestion: Save 20% of income monthly, reduce non-essentials, automate savings to a high-yield account. Stay disciplined and reassess goals monthly.`;
    }

    function calculateHealthScore() {
      const income = parseFloat(document.getElementById('fhIncome').value);
      const debt = parseFloat(document.getElementById('fhDebt').value);
      const savings = parseFloat(document.getElementById('fhSavings').value);
      const result = document.getElementById('fhScore');
      if (isNaN(income) || isNaN(debt) || isNaN(savings) || income <= 0) {
        result.textContent = 'Please enter all valid values.';
        return;
      }
      const savingsRatio = savings / income;
      const debtRatio = debt / income;
      const score = Math.max(0, Math.min(100, (savingsRatio * 50 - debtRatio * 30 + 50)));
      result.textContent = `Your estimated financial health score is ${score.toFixed(0)} out of 100.`;
    }

    function suggestInvestments() {
      const risk = document.getElementById('riskLevel').value;
      const age = parseInt(document.getElementById('investAge').value);
      const result = document.getElementById('investmentAdvice');
      if (isNaN(age) || age <= 0) {
        result.textContent = 'Please enter a valid age.';
        return;
      }
      let advice = '';
      if (risk === 'low') advice = 'Consider bonds, index funds, and CDs.';
      else if (risk === 'medium') advice = 'Look into ETFs, dividend stocks, and balanced mutual funds.';
      else advice = 'Explore growth stocks, REITs, and tech-oriented ETFs.';
      result.textContent = `At age ${age}, ${advice}`;
    }
  </script>
