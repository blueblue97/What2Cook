  <script>
    function calculateSurplus() {
      const income = parseFloat(document.getElementById('income').value);
      const expenses = parseFloat(document.getElementById('expenses').value);
      const result = document.getElementById('surplusResult');
      if (isNaN(income) || isNaN(expenses)) {
        result.textContent = 'Enter valid income and expenses.';
        return;
      }
      const surplus = income - expenses;
      result.textContent = `Your monthly surplus is $${surplus.toFixed(2)}.`;
    }

    function projectRetirement() {
      const age = parseInt(document.getElementById('currentAge').value);
      const retire = parseInt(document.getElementById('retirementAge').value);
      const savings = parseFloat(document.getElementById('monthlySavings').value);
      const returnRate = parseFloat(document.getElementById('annualReturn').value);
      const result = document.getElementById('retirementResult');

      if (isNaN(age) || isNaN(retire) || isNaN(savings) || isNaN(returnRate) || retire <= age) {
        result.textContent = 'Enter valid numbers. Retirement age must be greater than current age.';
        return;
      }

      const months = (retire - age) * 12;
      const monthlyReturn = returnRate / 100 / 12;
      const futureValue = savings * ((Math.pow(1 + monthlyReturn, months) - 1) / monthlyReturn);
      result.textContent = `Estimated savings at retirement: $${futureValue.toFixed(2)}.`;
    }

    function calculateNetWorth() {
      const assets = parseFloat(document.getElementById('assets').value);
      const liabilities = parseFloat(document.getElementById('liabilities').value);
      const result = document.getElementById('netWorthResult');

      if (isNaN(assets) || isNaN(liabilities)) {
        result.textContent = 'Enter both assets and liabilities.';
        return;
      }

      const netWorth = assets - liabilities;
      result.textContent = `Your net worth is $${netWorth.toFixed(2)}.`;
    }

    function calculateDebtSnowball() {
      let debts = [
        parseFloat(document.getElementById('debt1').value),
        parseFloat(document.getElementById('debt2').value),
        parseFloat(document.getElementById('debt3').value)
      ];
      if (debts.some(isNaN)) {
        document.getElementById('debtSnowballResult').textContent = 'Please enter all debt values.';
        return;
      }
      const ordered = debts.map((amt, idx) => ({ id: idx + 1, amt })).sort((a, b) => a.amt - b.amt);
      const orderText = ordered.map(d => `Debt #${d.id}: $${d.amt.toFixed(2)}`).join(' → ');
      document.getElementById('debtSnowballResult').textContent = `Suggested payoff order: ${orderText}`;
    }
  </script>
