  <script>
    function toggleDarkMode() {
      document.body.classList.toggle('dark-mode');
    }
    function calcBudget() {
      const i = parseFloat(document.getElementById('income').value);
      const e = parseFloat(document.getElementById('expenses').value);
      document.getElementById('surplus').innerText = `Surplus: $${(i - e).toFixed(2)}`;
    }
    function calcRetirement() {
      const age = +document.getElementById('age').value;
      const rAge = +document.getElementById('retireAge').value;
      const m = +document.getElementById('monthlySave').value;
      const r = +document.getElementById('annualReturn').value / 100 / 12;
      const months = (rAge - age) * 12;
      const fv = m * ((Math.pow(1 + r, months) - 1) / r);
      document.getElementById('retireResult').innerText = `Estimated Savings: $${fv.toFixed(2)}`;
    }
    function calcNetWorth() {
      const a = +document.getElementById('assets').value;
      const l = +document.getElementById('liabilities').value;
      document.getElementById('netWorth').innerText = `Net Worth: $${(a - l).toFixed(2)}`;
    }
    function mockAI() {
      const g = document.getElementById('goal').value.trim();
      if (!g) return;
      document.getElementById('aiAdvice').innerText = `Save 20%, cut non-essentials, automate savings. Stay consistent.`;
    }
    function calcScore() {
      const i = +document.getElementById('fhIncome').value;
      const d = +document.getElementById('fhDebt').value;
      const s = +document.getElementById('fhSavings').value;
      const score = Math.max(0, Math.min(100, (s / i * 50 - d / i * 30 + 50)));
      document.getElementById('score').innerText = `Score: ${score.toFixed(0)}/100`;
    }
    function suggestInvest() {
      const r = document.getElementById('risk').value;
      const a = +document.getElementById('ageInvest').value;
      const text = r === 'low' ? 'CDs & Bonds' : r === 'medium' ? 'ETFs & Blue-Chip Stocks' : 'Growth & Crypto';
      document.getElementById('investAdvice').innerText = `At ${a}, consider: ${text}`;
    }
    function calcLoan() {
      const P = +document.getElementById('loanAmount').value;
      const r = +document.getElementById('interestRate').value / 100 / 12;
      const n = +document.getElementById('loanYears').value * 12;
      const M = (P * r) / (1 - Math.pow(1 + r, -n));
      document.getElementById('loanResult').innerText = `Monthly: $${M.toFixed(2)}`;
    }
    function trackGoal() {
      const t = +document.getElementById('goalAmount').value;
      const c = +document.getElementById('savedSoFar').value;
      const p = Math.min(100, (c / t) * 100);
      document.getElementById('goalProgress').value = p;
      document.getElementById('goalDisplay').innerText = `Progress: ${p.toFixed(0)}%`;
    }
    new Chart(document.getElementById('netChart'), {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
        datasets: [{
          label: 'Net Worth',
          data: [1000, 1500, 2000, 2500, 3000],
          borderColor: '#0f79af',
          fill: false
        }]
      }
    });
  </script>
